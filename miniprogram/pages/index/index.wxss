/* 页面容器 */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  position: relative;
  overflow-x: hidden;
  transition: background 0.5s ease;
  box-sizing: border-box;
}

/* 动态背景装饰 */
.container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate-bg 20s linear infinite;
  pointer-events: none;
}

.container::after {
  content: '';
  position: absolute;
  bottom: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
  animation: rotate-bg 30s linear infinite reverse;
  pointer-events: none;
}

@keyframes rotate-bg {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 暗黑模式 */
.container.dark-mode {
  background: linear-gradient(135deg, #0f0c29 0%, #302b63 50%, #24243e 100%);
}

.container.dark-mode::before,
.container.dark-mode::after {
  background: radial-gradient(circle, rgba(100, 255, 218, 0.05) 0%, transparent 70%);
}

/* 顶部分数显示 */
.score-display {
  position: relative;
  z-index: 10;
  width: 100%;
  max-width: 650rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.85) 100%);
  border-radius: 30rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2),
              0 0 1rpx rgba(255, 255, 255, 0.5) inset;
  margin-bottom: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(20px);
  overflow: hidden;
  box-sizing: border-box;
}

.score-label {
  font-size: 32rpx;
  color: #888;
  margin-bottom: 12rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.score-value {
  font-size: 88rpx;
  font-weight: 900;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  animation: score-glow 2s ease-in-out infinite;
}

@keyframes score-glow {
  0%, 100% {
    filter: brightness(1);
    transform: scale(1);
  }
  50% {
    filter: brightness(1.2);
    transform: scale(1.02);
  }
}

/* 受气包区域 */
.bag-container {
  position: relative;
  z-index: 10;
  width: 450rpx;
  height: 450rpx;
  margin: 40rpx 0;
  filter: drop-shadow(0 20rpx 60rpx rgba(102, 126, 234, 0.3));
}

.bag-container::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120%;
  height: 120%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
  border-radius: 50%;
  animation: pulse-glow 2s ease-in-out infinite;
  pointer-events: none;
}

@keyframes pulse-glow {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.5;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.8;
  }
}

.bag-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  filter: drop-shadow(0 15rpx 40rpx rgba(0, 0, 0, 0.4));
  transition: transform 0.15s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

/* 抖动动画 */
.bag-image.shaking {
  animation: shake-enhanced 0.3s cubic-bezier(0.36, 0.07, 0.19, 0.97);
}

@keyframes shake-enhanced {
  0%, 100% { transform: translate(0, 0) rotate(0deg) scale(1); }
  10% { transform: translate(-15rpx, -10rpx) rotate(-8deg) scale(0.98); }
  20% { transform: translate(15rpx, -10rpx) rotate(8deg) scale(1.02); }
  30% { transform: translate(-15rpx, 10rpx) rotate(-8deg) scale(0.98); }
  40% { transform: translate(15rpx, 10rpx) rotate(8deg) scale(1.02); }
  50% { transform: translate(-15rpx, -10rpx) rotate(-8deg) scale(0.98); }
  60% { transform: translate(15rpx, -10rpx) rotate(8deg) scale(1.02); }
  70% { transform: translate(-15rpx, 10rpx) rotate(-8deg) scale(0.98); }
  80% { transform: translate(15rpx, 10rpx) rotate(8deg) scale(1.02); }
  90% { transform: translate(-8rpx, 0) rotate(-4deg) scale(1); }
}

/* 昏迷星星特效 */
.dizzy-stars {
  position: absolute;
  top: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 20rpx;
  pointer-events: none;
  animation: dizzy-float 1s ease-in-out infinite;
}

.dizzy-stars .star {
  font-size: 40rpx;
  animation: star-spin 2s linear infinite;
}

.dizzy-stars .star:nth-child(1) { animation-delay: 0s; }
.dizzy-stars .star:nth-child(2) { animation-delay: 0.3s; }
.dizzy-stars .star:nth-child(3) { animation-delay: 0.6s; }

@keyframes dizzy-float {
  0%, 100% { transform: translateX(-50%) translateY(0); }
  50% { transform: translateX(-50%) translateY(-20rpx); }
}

@keyframes star-spin {
  from { transform: rotate(0deg) scale(1); }
  50% { transform: rotate(180deg) scale(1.2); }
  to { transform: rotate(360deg) scale(1); }
}

/* 粒子特效 - 覆盖全屏 */
.particles-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  pointer-events: none;
  z-index: 100;
}

.particle {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
  animation: particle-float 0.6s ease-out forwards;
}

@keyframes particle-float {
  0% {
    transform: translate(0, 0) scale(1);
    opacity: 1;
  }
  100% {
    transform: translate(var(--tx), var(--ty)) scale(0);
    opacity: 0;
  }
}

/* 伤害飘字 - 覆盖全屏 */
.damage-texts-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  pointer-events: none;
  z-index: 200;
}

.damage-text {
  position: absolute;
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.5);
  animation: damage-float 1s ease-out forwards;
  pointer-events: none;
}

.damage-text.normal {
  font-size: 48rpx;
  color: #FFD700;
}

.damage-text.crit {
  font-size: 72rpx;
  color: #FF4500;
  animation: damage-float-crit 1s ease-out forwards;
}

@keyframes damage-float {
  0% {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
  100% {
    transform: translateY(-150rpx) scale(0.5);
    opacity: 0;
  }
}

@keyframes damage-float-crit {
  0% {
    transform: translateY(0) scale(0.5) rotate(-10deg);
    opacity: 1;
  }
  50% {
    transform: translateY(-100rpx) scale(1.2) rotate(10deg);
    opacity: 1;
  }
  100% {
    transform: translateY(-200rpx) scale(0.8) rotate(0deg);
    opacity: 0;
  }
}

/* 武器信息 */
.weapon-info {
  position: relative;
  z-index: 10;
  width: 100%;
  max-width: 650rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.1) 100%);
  backdrop-filter: blur(20px);
  border-radius: 25rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 15rpx 45rpx rgba(0, 0, 0, 0.15),
              0 0 1rpx rgba(255, 255, 255, 0.5) inset;
  box-sizing: border-box;
}

.weapon-name {
  font-size: 36rpx;
  color: #fff;
  font-weight: 900;
  margin-bottom: 10rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
}

.weapon-damage {
  font-size: 28rpx;
  color: #FFD700;
  font-weight: 700;
  text-shadow: 0 2rpx 8rpx rgba(255, 215, 0, 0.5);
}

/* 武器选择区域 */
.weapons-section {
  position: relative;
  z-index: 10;
  width: 100%;
  max-width: 650rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 900;
  color: #fff;
  text-align: center;
  margin-bottom: 30rpx;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.4);
  letter-spacing: 4rpx;
}

.section-title::after {
  content: '';
  display: block;
  width: 100rpx;
  height: 6rpx;
  background: linear-gradient(90deg, transparent, #FFD700, transparent);
  margin: 15rpx auto 0;
  border-radius: 3rpx;
  box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.6);
}

.weapons-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}

/* 武器卡片 */
.weapon-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
  border-radius: 25rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(20px);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  box-sizing: border-box;
}

.weapon-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), transparent);
  opacity: 0;
  transition: opacity 0.3s;
}

.weapon-card:active {
  transform: scale(0.95) translateY(5rpx);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.3);
}

.weapon-card:active::before {
  opacity: 1;
}

.weapon-card.active {
  border: 3rpx solid #FFD700;
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.3) 0%, rgba(255, 215, 0, 0.2) 100%);
  box-shadow: 0 15rpx 45rpx rgba(255, 215, 0, 0.4),
              0 0 30rpx rgba(255, 215, 0, 0.3) inset;
  transform: translateY(-5rpx);
}

.weapon-card.active::before {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.2), transparent);
  opacity: 1;
  animation: shimmer 2s ease-in-out infinite;
}

@keyframes shimmer {
  0%, 100% { opacity: 0.3; }
  50% { opacity: 0.6; }
}

.weapon-card.locked {
  opacity: 0.4;
  filter: grayscale(1) brightness(0.7);
  transform: scale(0.95);
}

.weapon-icon {
  font-size: 64rpx;
  margin-bottom: 15rpx;
  filter: drop-shadow(0 5rpx 15rpx rgba(0, 0, 0, 0.3));
  transition: transform 0.3s;
}

.weapon-card.active .weapon-icon {
  animation: icon-bounce 0.6s ease infinite;
}

@keyframes icon-bounce {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-10rpx) scale(1.1); }
}

.weapon-name-text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 800;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.4);
}

.weapon-damage-text {
  font-size: 24rpx;
  color: #FFD700;
  font-weight: 700;
  text-shadow: 0 2rpx 8rpx rgba(255, 215, 0, 0.5);
}

.weapon-unlock-hint {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.2);
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

.lock-icon {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  font-size: 36rpx;
  filter: drop-shadow(0 2rpx 6rpx rgba(0, 0, 0, 0.5));
}

/* 控制按钮组 */
.controls {
  position: relative;
  z-index: 10;
  width: 100%;
  max-width: 650rpx;
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

.control-btn {
  flex: 1;
  padding: 28rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
  border-radius: 25rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 800;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(20px);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.control-btn:active {
  transform: scale(0.95) translateY(5rpx);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.3);
}

.control-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 15rpx 45rpx rgba(102, 126, 234, 0.5),
              0 0 20rpx rgba(118, 75, 162, 0.3) inset;
}

.control-btn.primary:active {
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.6);
}

/* 暴怒模式指示器 */
.rage-indicator {
  position: fixed;
  top: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 25rpx 50rpx;
  background: linear-gradient(135deg, #FF4500 0%, #FF6347 50%, #FF4500 100%);
  background-size: 200% 200%;
  border-radius: 50rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 900;
  box-shadow: 0 15rpx 50rpx rgba(255, 69, 0, 0.7),
              0 0 30rpx rgba(255, 99, 71, 0.5) inset;
  animation: rage-pulse-enhanced 0.4s ease-in-out infinite alternate,
             rage-gradient 3s ease infinite;
  z-index: 1000;
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  text-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.5);
}

@keyframes rage-pulse-enhanced {
  from {
    transform: translateX(-50%) scale(1);
    box-shadow: 0 15rpx 50rpx rgba(255, 69, 0, 0.7),
                0 0 30rpx rgba(255, 99, 71, 0.5) inset;
  }
  to {
    transform: translateX(-50%) scale(1.08);
    box-shadow: 0 20rpx 60rpx rgba(255, 69, 0, 1),
                0 0 40rpx rgba(255, 99, 71, 0.8) inset;
  }
}

@keyframes rage-gradient {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

/* BGM控制器 */
.bgm-control {
  position: fixed;
  bottom: 160rpx;
  right: 40rpx;
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.9) 0%, rgba(118, 75, 162, 0.9) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(20px);
  border: 3rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 15rpx 45rpx rgba(102, 126, 234, 0.5);
  z-index: 50;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.bgm-control:active {
  transform: scale(0.9);
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.6);
}

.bgm-icon {
  font-size: 48rpx;
  filter: drop-shadow(0 3rpx 8rpx rgba(0, 0, 0, 0.3));
}

/* 设置按钮 */
.settings-button {
  position: fixed;
  top: 40rpx;
  right: 40rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.15) 100%);
  backdrop-filter: blur(20px);
  padding: 20rpx;
  border-radius: 50%;
  width: 90rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 15rpx 45rpx rgba(0, 0, 0, 0.2);
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  z-index: 50;
}

.settings-button text {
  font-size: 40rpx;
  filter: drop-shadow(0 3rpx 8rpx rgba(0, 0, 0, 0.3));
}

.settings-button:active {
  transform: rotate(180deg) scale(0.9);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

/* 连击计数器 */
.combo-counter {
  position: absolute;
  top: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.9) 0%, rgba(255, 165, 0, 0.9) 100%);
  backdrop-filter: blur(20px);
  padding: 15rpx 40rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 900;
  box-shadow: 0 10rpx 30rpx rgba(255, 215, 0, 0.5);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  animation: combo-glow 0.5s ease-in-out infinite alternate;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.4);
}

@keyframes combo-glow {
  from {
    box-shadow: 0 10rpx 30rpx rgba(255, 215, 0, 0.5);
    transform: translateX(-50%) scale(1);
  }
  to {
    box-shadow: 0 15rpx 40rpx rgba(255, 215, 0, 0.8);
    transform: translateX(-50%) scale(1.05);
  }
}

/* 暗黑模式适配 */
.dark-mode .score-display {
  background: linear-gradient(135deg, rgba(30, 30, 50, 0.9) 0%, rgba(20, 20, 40, 0.85) 100%);
  border-color: rgba(100, 255, 218, 0.3);
}

.dark-mode .score-value {
  background: linear-gradient(135deg, #64ffda 0%, #00bcd4 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.dark-mode .weapon-info,
.dark-mode .weapon-card,
.dark-mode .control-btn {
  background: linear-gradient(135deg, rgba(50, 50, 80, 0.4) 0%, rgba(30, 30, 60, 0.3) 100%);
  border-color: rgba(100, 255, 218, 0.2);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.5);
}

.dark-mode .weapon-card.active {
  border-color: #64ffda;
  background: linear-gradient(135deg, rgba(100, 255, 218, 0.3) 0%, rgba(0, 188, 212, 0.2) 100%);
  box-shadow: 0 15rpx 45rpx rgba(100, 255, 218, 0.4),
              0 0 30rpx rgba(100, 255, 218, 0.2) inset;
}

.dark-mode .control-btn.primary {
  background: linear-gradient(135deg, #00bcd4 0%, #0097a7 100%);
  box-shadow: 0 15rpx 45rpx rgba(0, 188, 212, 0.5);
}

.dark-mode .bgm-control {
  background: linear-gradient(135deg, rgba(0, 188, 212, 0.9) 0%, rgba(0, 151, 167, 0.9) 100%);
  box-shadow: 0 15rpx 45rpx rgba(0, 188, 212, 0.5);
}
