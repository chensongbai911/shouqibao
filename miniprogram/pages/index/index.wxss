  border-radius: 12rpx;
  z-index: 1;
}

.card-damage.legendary {
  background: linear-gradient(135deg, rgba(244, 67, 54, 0.3), rgba(255, 152, 0, 0.3));
}

.damage-value {
  font-family: var(--font-number);
  font-size: 36rpx;
  font-weight: 700;
  color: var(--color-danger);
