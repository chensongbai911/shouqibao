/* ========== 设计系统变量 - 多巴胺风格 ========== */
page {
  /* 字体系统 */
  --font-title: 'PingFang SC', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  --font-number: 'DIN Alternate', 'Helvetica Neue', Arial, sans-serif;

  /* 字号系统 */
  --font-size-title: 36rpx;
  --font-size-body: 28rpx;
  --font-size-number: 48rpx;
  --font-size-small: 24rpx;
  --font-size-huge: 96rpx;       /* 超大分数 */

  /* 间距系统 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-container: 16rpx;

  /* 多巴胺配色系统 */
  --color-primary: #FF6B9D;      /* 糖果粉 */
  --color-secondary: #C44AFF;    /* 亮紫色 */
  --color-accent: #FF9A5C;       /* 暖橙色 */
  --color-highlight: #FFD93D;    /* 金黄色 */
  --color-danger: #FF6B6B;       /* 活力红 */
  --color-candy-blue: #4ECDC4;   /* 糖果蓝 */
  --color-text: #2D3436;
  --color-text-light: #DFE6E9;

  /* 毛玻璃效果 */
  --glass-bg: rgba(255, 255, 255, 0.65);
  --glass-blur: blur(20rpx);
  --glass-border: rgba(255, 255, 255, 0.3);
}

/* 隐藏旧导航栏 - 改为全屏沉浸式 */
.custom-navbar {
  display: none;
}

.navbar-spacer {
  display: none;
}

/* 页面容器 - 全屏沉浸式 */
.container {
  min-height: 100vh;
  height: 100vh;
  max-height: 100vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0;
  background: transparent;
  position: relative;
  transition: background 0.5s ease;
  box-sizing: border-box;
}

/* ========== 多巴胺风格渐变背景 ========== */
.gradient-background {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: -1;
  overflow: hidden;
}

.gradient-layer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  /* 多巴胺暖色渐变：浅橙→浅粉→奶油黄 */
  background: linear-gradient(145deg,
    #FFF5E6 0%,      /* 奶油黄 */
    #FFE4EC 25%,     /* 浅粉 */
    #FFF0F5 50%,     /* 淡玫瑰 */
    #F5E6FF 75%,     /* 淡紫 */
    #E8F4FD 100%     /* 浅蓝 */
  );
  background-size: 200% 200%;
  animation: gradient-flow 12s ease-in-out infinite;
}

@keyframes gradient-flow {
  0%, 100% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
}

/* 浮动装饰圆点 - 更大更柔和 */
.bg-particle {
  position: absolute;
  border-radius: 50%;
  opacity: 0.5;
  pointer-events: none;
}

.bg-particle.p1 {
  width: 120rpx;
  height: 120rpx;
  background: radial-gradient(circle, rgba(78, 205, 196, 0.3) 0%, transparent 70%);
  top: 10%;
  left: 15%;
  animation: particle-float 8s ease-in-out infinite;
}

.bg-particle.p2 {
  width: 80rpx;
  height: 80rpx;
  background: radial-gradient(circle, rgba(255, 154, 118, 0.3) 0%, transparent 70%);
  top: 25%;
  right: 20%;
  animation: particle-float 10s ease-in-out infinite reverse;
}

.bg-particle.p3 {
  width: 100rpx;
  height: 100rpx;
  background: radial-gradient(circle, rgba(179, 136, 255, 0.25) 0%, transparent 70%);
  bottom: 30%;
  left: 10%;
  animation: particle-float 12s ease-in-out infinite 2s;
}

.bg-particle.p4 {
  width: 60rpx;
  height: 60rpx;
  background: radial-gradient(circle, rgba(255, 234, 167, 0.35) 0%, transparent 70%);
  top: 45%;
  right: 8%;
  animation: particle-float 9s ease-in-out infinite 1s;
}

.bg-particle.p5 {
  width: 90rpx;
  height: 90rpx;
  background: radial-gradient(circle, rgba(129, 236, 236, 0.3) 0%, transparent 70%);
  bottom: 15%;
  right: 25%;
  animation: particle-float 11s ease-in-out infinite 3s;
}

.bg-particle.p6 {
  width: 70rpx;
  height: 70rpx;
  background: radial-gradient(circle, rgba(255, 107, 107, 0.2) 0%, transparent 70%);
  top: 60%;
  left: 30%;
  animation: particle-float 7s ease-in-out infinite 0.5s;
}

.bg-particle.p7 {
  width: 50rpx;
  height: 50rpx;
  background: radial-gradient(circle, rgba(162, 155, 254, 0.3) 0%, transparent 70%);
  top: 15%;
  left: 60%;
  animation: particle-float 13s ease-in-out infinite 4s;
}

.bg-particle.p8 {
  width: 110rpx;
  height: 110rpx;
  background: radial-gradient(circle, rgba(116, 185, 255, 0.25) 0%, transparent 70%);
  bottom: 40%;
  right: 40%;
  animation: particle-float 14s ease-in-out infinite 2.5s;
}

@keyframes particle-float {
  0%, 100% {
    transform: translate(0, 0) scale(1);
  }
  25% {
    transform: translate(30rpx, -40rpx) scale(1.1);
  }
  50% {
    transform: translate(-20rpx, 30rpx) scale(0.9);
  }
  75% {
    transform: translate(40rpx, 20rpx) scale(1.05);
  }
}

/* 暗黑模式背景 */
.container.dark-mode .gradient-layer {
  background: linear-gradient(135deg,
    #1a1a2e 0%,
    #16213e 35%,
    #1a1a2e 65%,
    #0f0f23 100%
  );
}

.container.dark-mode .bg-particle {
  opacity: 0.2;
}

/* ========== 打击动效系统 ========== */

/* 屏幕震动效果 */
.container.screen-shake {
  animation: screen-shake 0.05s ease-in-out;
}

@keyframes screen-shake {
  0%, 100% { transform: translate3d(0, 0, 0); }
  25% { transform: translate3d(-2px, 1px, 0); }
  50% { transform: translate3d(2px, -1px, 0); }
  75% { transform: translate3d(-1px, 2px, 0); }
}

/* 连击闪光背景 */
.combo-flash-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at center, rgba(255, 107, 107, 0.15) 0%, transparent 70%);
  pointer-events: none;
  z-index: 100;
  opacity: 0;
  transition: opacity 0.1s ease;
}

.combo-flash-overlay.active {
  opacity: 1;
  animation: combo-flash 0.1s ease-out;
}

@keyframes combo-flash {
  0% { opacity: 0; background: radial-gradient(circle at center, rgba(255, 107, 107, 0.3) 0%, transparent 70%); }
  50% { opacity: 1; }
  100% { opacity: 0; }
}

/* 连击结算提示 */
.combo-result {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.5);
  z-index: 500;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.combo-result.show {
  opacity: 1;
  transform: translate(-50%, -50%) scale(1);
}

.combo-result-text {
  display: block;
  font-family: var(--font-number);
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  text-shadow:
    0 0 20rpx rgba(255, 107, 107, 0.8),
    0 0 40rpx rgba(255, 107, 107, 0.5),
    2rpx 2rpx 4rpx rgba(0, 0, 0, 0.5);
  background: linear-gradient(135deg, var(--color-danger) 0%, var(--color-accent) 100%);
  padding: var(--spacing-md) var(--spacing-lg);
  border-radius: var(--spacing-sm);
  animation: combo-result-pulse 0.5s ease-in-out infinite alternate;
}

@keyframes combo-result-pulse {
  0% { transform: scale(1); }
  100% { transform: scale(1.05); }
}

/* 动态背景装饰 */
.container::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  animation: rotate-bg 20s linear infinite;
  pointer-events: none;
}

.container::after {
  content: '';
  position: absolute;
  bottom: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.05) 0%, transparent 70%);
  animation: rotate-bg 30s linear infinite reverse;
  pointer-events: none;
}

@keyframes rotate-bg {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 暗黑模式 */
.container.dark-mode {
  background: linear-gradient(135deg, #2D3436 0%, #1e272e 50%, #2D3436 100%);  /* 深灰渐变 */
}

.container.dark-mode::before,
.container.dark-mode::after {
  background: radial-gradient(circle, rgba(78, 205, 196, 0.08) 0%, transparent 70%);  /* 治愈蓝光晕 */
}

/* ========== 圆形分数卡片（缩小版） ========== */
.score-circle {
  position: relative;
  z-index: 10;
  width: 360rpx;  /* 180px */
  height: 360rpx;
  border-radius: 50%;
  background: linear-gradient(180deg, #fff 0%, #DFE6E9 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(45, 52, 54, 0.15),
              0 0 0 4rpx rgba(78, 205, 196, 0.3) inset;
  margin-bottom: var(--spacing-md);  /* 24px */
  flex-shrink: 0;
}

.score-circle .score-label {
  font-family: var(--font-title);
  font-size: var(--font-size-body);  /* 28px 正文 */
  color: var(--color-text);
  font-weight: 400;  /* Regular */
  letter-spacing: 2rpx;
  margin-bottom: var(--spacing-xs);  /* 8px */
}

.score-circle .score-value {
  font-family: var(--font-number);
  font-size: var(--font-size-number);  /* 48px 数字 */
  font-weight: 700;  /* Bold */
  background: linear-gradient(135deg, #FFEAA7 0%, #fdcb6e 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
}

/* 连击徽章 */
.combo-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF9A76 100%);
  color: #fff;
  font-family: var(--font-number);
  font-size: var(--font-size-small);  /* 24px */
  font-weight: 700;
  padding: var(--spacing-xs) var(--spacing-sm);  /* 8px 16px */
  border-radius: var(--spacing-sm);  /* 16px */
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 107, 0.5);
  animation: combo-pulse 0.5s ease-in-out infinite alternate;
}

@keyframes combo-pulse {
  from { transform: scale(1); }
  to { transform: scale(1.1); }
}

/* 旧的分数显示样式（保留兼容） */
.score-display {
  display: none;
}

.score-label {
  font-family: var(--font-title);
  font-size: var(--font-size-body);  /* 28px */
  color: var(--color-text);
  margin-bottom: var(--spacing-xs);  /* 8px */
  font-weight: 400;
  letter-spacing: 2rpx;
}

.score-value {
  font-family: var(--font-number);
  font-size: var(--font-size-number);  /* 48px 数字 */
  font-weight: 700;
  /* 亮黄渐变，强调数字 */
  background: linear-gradient(135deg, #FFEAA7 0%, #fdcb6e 50%, #f39c12 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: 0 4rpx 8rpx rgba(253, 203, 110, 0.3);
  animation: score-glow 2s ease-in-out infinite;
}

@keyframes score-glow {
  0%, 100% {
    filter: brightness(1);
    transform: scale(1);
  }
  50% {
    filter: brightness(1.2);
    transform: scale(1.02);
  }
}

/* ========== 沙袋区域（简化版） ========== */
.bag-container {
  position: relative;
  z-index: 10;
  width: 320rpx;  /* 160px，缩小 */
  height: 320rpx;
  margin: 0 0 32rpx 0;
  perspective: 1200rpx;
  perspective-origin: center center;
  flex-shrink: 0;
}

/* 去掉白色圆形背景 */
.bag-container::before {
  display: none;
}

/* 简化阴影 */
.bag-shadow-simple {
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 70%;
  height: 20rpx;
  background: radial-gradient(ellipse, rgba(0, 0, 0, 0.25) 0%, transparent 70%);
  border-radius: 50%;
  filter: blur(8rpx);
  transition: all 0.3s ease;
  pointer-events: none;
}

.bag-shadow-simple.shadow-active {
  width: 60%;
  filter: blur(12rpx);
}

/* ========== 增强脚底阴影系统 ========== */
.bag-ground-shadow {
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 40rpx;
  pointer-events: none;
  transition: all 0.15s ease;
}

.bag-ground-shadow .shadow-core {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 70%;
  height: 16rpx;
  background: radial-gradient(ellipse 100% 100%, rgba(0, 0, 0, 0.35) 0%, rgba(0, 0, 0, 0.15) 50%, transparent 80%);
  border-radius: 50%;
  filter: blur(4rpx);
}

.bag-ground-shadow .shadow-blur {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  height: 24rpx;
  background: radial-gradient(ellipse 100% 100%, rgba(0, 0, 0, 0.15) 0%, rgba(0, 0, 0, 0.05) 40%, transparent 70%);
  border-radius: 50%;
  filter: blur(12rpx);
}

/* 受击时阴影压缩 */
.bag-ground-shadow.shadow-squash .shadow-core {
  width: 90%;
  height: 12rpx;
  filter: blur(6rpx);
  opacity: 0.7;
}

.bag-ground-shadow.shadow-squash .shadow-blur {
  width: 120%;
  height: 20rpx;
  opacity: 0.5;
}

/* ========== 全屏触控区域 ========== */
.bag-area.touch-area {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  cursor: pointer;
  -webkit-tap-highlight-color: transparent;
}

.touch-hint {
  position: absolute;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  opacity: 0.6;
  animation: hint-pulse 2s ease-in-out infinite;
}

.touch-hint-icon {
  font-size: 48rpx;
  animation: hint-bounce 1s ease-in-out infinite;
}

.touch-hint-text {
  font-size: 24rpx;
  color: var(--color-text);
  font-family: var(--font-title);
}

@keyframes hint-pulse {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 0.9; }
}

@keyframes hint-bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

/* 点击涟漪效果 */
.tap-hint-ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.ripple-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 4rpx solid rgba(78, 205, 196, 0.5);
  border-radius: 50%;
  animation: ripple-expand 1.5s ease-out infinite;
}

.ripple-ring.r1 {
  animation-delay: 0s;
}

.ripple-ring.r2 {
  animation-delay: 0.5s;
}

.ripple-ring.r3 {
  animation-delay: 1s;
}

@keyframes ripple-expand {
  0% {
    width: 50rpx;
    height: 50rpx;
    opacity: 0.8;
  }
  100% {
    width: 300rpx;
    height: 300rpx;
    opacity: 0;
  }
}

@keyframes pulse-glow {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.5;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.8;
  }
}

.bag-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  filter: drop-shadow(0 15rpx 40rpx rgba(0, 0, 0, 0.4));
  transition: transform 0.15s cubic-bezier(0.68, -0.55, 0.265, 1.55),
              opacity 0.15s ease-out,
              filter 0.2s ease-out;
  transform-style: preserve-3d;
  transform: translateZ(50rpx);
  border-radius: 50%;
  position: relative;
}

/* 表情图层叠加样式 */
.bag-layer {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  pointer-events: none;
  will-change: opacity, transform, filter;
}

.bag-layer.active {
  opacity: 1;
  pointer-events: auto;
}

.bag-image::before {
  content: '';
  position: absolute;
  top: 15%;
  left: 20%;
  width: 35%;
  height: 35%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.7) 0%, rgba(255, 255, 255, 0.3) 50%, transparent 70%);
  border-radius: 50%;
  filter: blur(15rpx);
  pointer-events: none;
  z-index: 10;
  transform: translateZ(10rpx);
}

.bag-shadow {
  position: absolute;
  bottom: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 70%;
  height: 30rpx;
  background: radial-gradient(ellipse, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 50%, transparent 70%);
  border-radius: 50%;
  filter: blur(20rpx);
  transition: all 0.3s ease;
  pointer-events: none;
  opacity: 0.6;
}

.bag-shadow.shadow-active {
  width: 60%;
  opacity: 0.8;
  filter: blur(25rpx);
}

/* 3D包装层 */
.bag-3d-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

/* 抖动动画 */
.bag-image.shaking {
  animation: shake-3d 0.3s cubic-bezier(0.36, 0.07, 0.19, 0.97);
}

@keyframes shake-3d {
  0%, 100% {
    transform: translateZ(50rpx) rotateX(0deg) rotateY(0deg) scale(1);
  }
  10% {
    transform: translateZ(30rpx) rotateX(-12deg) rotateY(-18deg) scale(0.94);
  }
  20% {
    transform: translateZ(65rpx) rotateX(12deg) rotateY(18deg) scale(1.06);
  }
  30% {
    transform: translateZ(28rpx) rotateX(-10deg) rotateY(-15deg) scale(0.95);
  }
  40% {
    transform: translateZ(62rpx) rotateX(10deg) rotateY(15deg) scale(1.05);
  }
  50% {
    transform: translateZ(32rpx) rotateX(-8deg) rotateY(-12deg) scale(0.96);
  }
  60% {
    transform: translateZ(58rpx) rotateX(8deg) rotateY(12deg) scale(1.04);
  }
  70% {
    transform: translateZ(38rpx) rotateX(-5deg) rotateY(-8deg) scale(0.97);
  }
  80% {
    transform: translateZ(55rpx) rotateX(5deg) rotateY(8deg) scale(1.03);
  }
  90% {
    transform: translateZ(45rpx) rotateX(-2deg) rotateY(-4deg) scale(0.99);
  }
}

/* 普通点击 - 挤压回弹效果 (300ms) */
/* 打击反馈阶段(50-150ms): scaleX 1→1.2, scaleY 1→0.8 */
.bag-3d-wrapper.hit-squash {
  animation: squash-3d 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes squash-3d {
  0% {
    transform: scale3d(1, 1, 1) translateZ(0);
  }
  /* 打击反馈阶段 - 压缩 */
  17% {
    transform: scale3d(1.2, 0.8, 1) translateZ(-20rpx);
  }
  /* 回弹过度 */
  50% {
    transform: scale3d(0.9, 1.1, 1) translateZ(15rpx);
  }
  /* 恢复阶段 */
  75% {
    transform: scale3d(1.05, 0.97, 1) translateZ(-5rpx);
  }
  100% {
    transform: scale3d(1, 1, 1) translateZ(0);
  }
}

/* 暴击 - 3D旋转翻滚效果 (500ms) */
.bag-3d-wrapper.crit-hit {
  animation: crit-spin-3d 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes crit-spin-3d {
  0% {
    transform: scale3d(1, 1, 1) rotateY(0deg) rotateX(0deg);
  }
  /* 压缩+旋转开始 */
  15% {
    transform: scale3d(1.3, 0.7, 1) rotateY(60deg) rotateX(15deg);
  }
  /* 继续旋转 */
  35% {
    transform: scale3d(0.85, 1.15, 1) rotateY(180deg) rotateX(-10deg);
  }
  /* 回弹 */
  55% {
    transform: scale3d(1.1, 0.9, 1) rotateY(300deg) rotateX(8deg);
  }
  /* 接近恢复 */
  75% {
    transform: scale3d(0.95, 1.05, 1) rotateY(350deg) rotateX(-3deg);
  }
  100% {
    transform: scale3d(1, 1, 1) rotateY(360deg) rotateX(0deg);
  }
}

/* 受气包表情状态 - 3D增强 */
.bag-image.expression-hit {
  filter: hue-rotate(20deg) brightness(1.1);
}

.bag-image.expression-crit {
  filter: hue-rotate(40deg) brightness(1.3) saturate(1.5);
  animation: crit-glow 0.5s ease-in-out;
}

@keyframes crit-glow {
  0%, 100% {
    filter: hue-rotate(40deg) brightness(1.3) saturate(1.5) drop-shadow(0 0 0rpx rgba(255, 69, 0, 0));
  }
  50% {
