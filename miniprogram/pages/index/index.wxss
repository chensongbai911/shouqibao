/* 页面容器 */
.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  position: relative;
  overflow: hidden;
}

/* 暗黑模式 */
.container.dark-mode {
  background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
}

/* 顶部信息栏 */
.top-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  backdrop-filter: blur(10px);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.score-display {
  width: 90%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 40rpx;
}

.score-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.score-value {
  font-size: 72rpx;
  font-weight: bold;
  color: #667eea;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

/* 武器切换按钮 */
.weapon-switch {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.weapon-switch:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.3);
}

/* 受气包区域 */
.bag-container {
  position: relative;
  width: 500rpx;
  height: 500rpx;
  margin: 60rpx 0;
}

.punching-bag {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  transition: transform 0.1s ease;
}

/* 受气包抖动动画 */
.punching-bag.shaking {
  animation: shake 0.3s ease;
}

@keyframes shake {
  0%, 100% { transform: translate(0, 0) rotate(0deg); }
  10% { transform: translate(-10rpx, -10rpx) rotate(-5deg); }
  20% { transform: translate(10rpx, -10rpx) rotate(5deg); }
  30% { transform: translate(-10rpx, 10rpx) rotate(-5deg); }
  40% { transform: translate(10rpx, 10rpx) rotate(5deg); }
  50% { transform: translate(-10rpx, -10rpx) rotate(-5deg); }
  60% { transform: translate(10rpx, -10rpx) rotate(5deg); }
  70% { transform: translate(-10rpx, 10rpx) rotate(-5deg); }
  80% { transform: translate(10rpx, 10rpx) rotate(5deg); }
  90% { transform: translate(-10rpx, 0) rotate(-2deg); }
}

.bag-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  filter: drop-shadow(0 10rpx 30rpx rgba(0, 0, 0, 0.3));
  transition: transform 0.1s ease;
}

/* 受气包抖动动画 */
.bag-image.shaking {
  animation: shake 0.3s ease;
}

/* 昏迷星星特效 */
.dizzy-stars {
  position: absolute;
  top: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 20rpx;
  pointer-events: none;
  animation: dizzy-float 1s ease-in-out infinite;
}

.dizzy-stars .star {
  font-size: 40rpx;
  animation: star-spin 2s linear infinite;
}

.dizzy-stars .star:nth-child(1) {
  animation-delay: 0s;
}

.dizzy-stars .star:nth-child(2) {
  animation-delay: 0.3s;
}

.dizzy-stars .star:nth-child(3) {
  animation-delay: 0.6s;
}

@keyframes dizzy-float {
  0%, 100% {
    transform: translateX(-50%) translateY(0);
  }
  50% {
    transform: translateX(-50%) translateY(-20rpx);
  }
}

@keyframes star-spin {
  from {
    transform: rotate(0deg) scale(1);
  }
  50% {
    transform: rotate(180deg) scale(1.2);
  }
  to {
    transform: rotate(360deg) scale(1);
  }
}

/* 粒子特效 */
.particles-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 10;
}

.particle {
  position: absolute;
  border-radius: 50%;
  pointer-events: none;
  animation: particle-float 0.6s ease-out forwards;
}

@keyframes particle-float {
  0% {
    transform: translate(0, 0) scale(1);
    opacity: 1;
  }
  100% {
    transform: translate(var(--tx), var(--ty)) scale(0);
    opacity: 0;
  }
}

/* 伤害飘字 */
.damage-texts-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 20;
}

.damage-text {
  position: absolute;
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.5);
  animation: damage-float 1s ease-out forwards;
  pointer-events: none;
}

.damage-text.normal {
  font-size: 48rpx;
  color: #FFD700;
}

.damage-text.crit {
  font-size: 72rpx;
  color: #FF4500;
  animation: damage-float-crit 1s ease-out forwards;
}

@keyframes damage-float {
  0% {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
  100% {
    transform: translateY(-150rpx) scale(0.5);
    opacity: 0;
  }
}

@keyframes damage-float-crit {
  0% {
    transform: translateY(0) scale(0.5) rotate(-10deg);
    opacity: 1;
  }
  50% {
    transform: translateY(-100rpx) scale(1.2) rotate(10deg);
    opacity: 1;
  }
  100% {
    transform: translateY(-200rpx) scale(0.8) rotate(0deg);
    opacity: 0;
  }
}

/* 武器信息 */
.weapon-info {
  width: 90%;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

.weapon-name {
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.weapon-damage {
  font-size: 24rpx;
  color: #FFD700;
}

/* 武器选择区域 */
.weapons-section {
  width: 100%;
  margin-top: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  text-align: center;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.weapons-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  padding: 20rpx;
}

.weapon-card {
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  position: relative;
}

.weapon-card:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.weapon-card.active {
  border: 3rpx solid #FFD700;
  background: rgba(255, 215, 0, 0.2);
  box-shadow: 0 0 20rpx rgba(255, 215, 0, 0.5);
}

.weapon-card.locked {
  opacity: 0.5;
  filter: grayscale(1);
}

.weapon-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.weapon-name-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.weapon-damage-text {
  font-size: 20rpx;
  color: #FFD700;
}

.weapon-unlock-hint {
  font-size: 18rpx;
  color: rgba(255, 255, 255, 0.6);
  margin-top: 5rpx;
  text-align: center;
}

.lock-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 32rpx;
}

/* 控制按钮组 */
.controls {
  width: 100%;
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.control-btn {
  flex: 1;
  padding: 24rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.25);
}

.control-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 15rpx rgba(102, 126, 234, 0.4);
}

/* 底部按钮组 */
.bottom-buttons {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 0 40rpx;
  margin-top: 40rpx;
}

.action-button {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  padding: 24rpx 48rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.action-button:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.25);
}

.action-button:active {
  transform: translateY(0) scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

/* 暴怒模式指示器 */
.rage-indicator {
  position: fixed;
  top: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  padding: 20rpx 40rpx;
  background: linear-gradient(135deg, #FF4500, #FF6347);
  border-radius: 40rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 30rpx rgba(255, 69, 0, 0.6);
  animation: rage-pulse 0.5s ease-in-out infinite alternate;
  z-index: 100;
}

@keyframes rage-pulse {
  from {
    transform: translateX(-50%) scale(1);
    box-shadow: 0 8rpx 30rpx rgba(255, 69, 0, 0.6);
  }
  to {
    transform: translateX(-50%) scale(1.05);
    box-shadow: 0 12rpx 40rpx rgba(255, 69, 0, 0.9);
  }
}

/* BGM控制器 */
.bgm-control {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
  z-index: 50;
  transition: all 0.3s ease;
}

.bgm-control:active {
  transform: scale(0.9);
}

.bgm-icon {
  font-size: 40rpx;
}

/* 设置按钮 */
.settings-button {
  position: fixed;
  top: 40rpx;
  right: 40rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  padding: 16rpx;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.settings-button:active {
  transform: rotate(90deg) scale(0.9);
}

/* 解锁提示 */
.unlock-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(255, 215, 0, 0.95);
  color: #333;
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.3);
  animation: unlock-appear 0.5s ease;
  z-index: 1000;
}

@keyframes unlock-appear {
  0% {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.5);
  }
  100% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

/* 连击计数器 */
.combo-counter {
  position: absolute;
  top: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  padding: 12rpx 32rpx;
  border-radius: 50rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

/* 受气包表情状态 */
.punching-bag.expression-hit {
  filter: hue-rotate(20deg) brightness(1.1);
}

.punching-bag.expression-crit {
  filter: hue-rotate(40deg) brightness(1.3) saturate(1.5);
}

.punching-bag.expression-dizzy {
  filter: blur(2rpx) grayscale(0.3);
  animation: dizzy-spin 1s ease;
}

@keyframes dizzy-spin {
  0%, 100% { transform: rotate(0deg); }
  25% { transform: rotate(-10deg); }
  75% { transform: rotate(10deg); }
}

/* 暗黑模式 */
.dark-mode .top-info,
.dark-mode .weapon-card,
.dark-mode .control-btn {
  background: rgba(0, 0, 0, 0.3);
  border-color: rgba(255, 255, 255, 0.1);
}

.dark-mode .weapon-card.active {
  border-color: #FFD700;
  background: rgba(255, 215, 0, 0.15);
}
