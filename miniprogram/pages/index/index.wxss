  justify-content: center;
  margin: var(--spacing-sm) 0;
  z-index: 1;
}

.weapon-icon-3d {
  width: 120rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.2) 0%, transparent 70%);
  border-radius: 50%;
  box-shadow:
