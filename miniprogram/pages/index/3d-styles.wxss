/* 受气包 3D 渲染与互动样式 */

/* 受气包区域布局 */
.bag-area {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: var(--spacing-sm) 0;
  flex-shrink: 0;
}

.bag-area.touch-area {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  cursor: pointer;
  -webkit-tap-highlight-color: transparent;
}

.bag-area .bag-container {
  width: 280rpx;
  height: 280rpx;
}

/* 核心 3D 容器 */
.bag-container {
  position: relative;
  z-index: 10;
  width: 320rpx;
  height: 320rpx;
  margin: 0 0 32rpx 0;
  perspective: 1200rpx;
  perspective-origin: center center;
  flex-shrink: 0;
}

.bag-container::before {
  display: none;
}

/* 简化基座阴影 */
.bag-shadow-simple {
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 70%;
  height: 20rpx;
  background: radial-gradient(ellipse, rgba(0, 0, 0, 0.25) 0%, transparent 70%);
  border-radius: 50%;
  filter: blur(8rpx);
  transition: all 0.3s ease;
  pointer-events: none;
}

.bag-shadow-simple.shadow-active {
  width: 60%;
  filter: blur(12rpx);
}

/* 增强脚底阴影 */
.bag-ground-shadow {
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 40rpx;
  pointer-events: none;
  transition: all 0.15s ease;
}

.bag-ground-shadow .shadow-core {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 70%;
  height: 16rpx;
  background: radial-gradient(ellipse 100% 100%, rgba(0, 0, 0, 0.35) 0%, rgba(0, 0, 0, 0.15) 50%, transparent 80%);
  border-radius: 50%;
  filter: blur(4rpx);
}

.bag-ground-shadow .shadow-blur {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  height: 24rpx;
  background: radial-gradient(ellipse 100% 100%, rgba(0, 0, 0, 0.15) 0%, rgba(0, 0, 0, 0.05) 40%, transparent 70%);
  border-radius: 50%;
  filter: blur(12rpx);
}

.bag-ground-shadow.shadow-squash .shadow-core {
  width: 90%;
  height: 12rpx;
  filter: blur(6rpx);
  opacity: 0.7;
}

.bag-ground-shadow.shadow-squash .shadow-blur {
  width: 120%;
  height: 20rpx;
  opacity: 0.5;
}

/* 触控提示与涟漪 */
.touch-hint {
  position: absolute;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  opacity: 0.6;
  animation: hint-pulse 2s ease-in-out infinite;
}

.touch-hint-icon {
  font-size: 48rpx;
  animation: hint-bounce 1s ease-in-out infinite;
}

.touch-hint-text {
  font-size: 24rpx;
  color: var(--color-text);
  font-family: var(--font-title);
}

@keyframes hint-pulse {
  0%, 100% { opacity: 0.6; }
  50% { opacity: 0.9; }
}

@keyframes hint-bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.tap-hint {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 48rpx;
  opacity: 0.6;
  animation: tap-pulse 1.5s ease-in-out infinite;
  pointer-events: none;
}

@keyframes tap-pulse {
  0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.6; }
  50% { transform: translate(-50%, -50%) scale(1.2); opacity: 0.9; }
}

.tap-hint-ripple {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.ripple-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 4rpx solid rgba(78, 205, 196, 0.5);
  border-radius: 50%;
  animation: ripple-expand 1.5s ease-out infinite;
}

.ripple-ring.r1 { animation-delay: 0s; }
.ripple-ring.r2 { animation-delay: 0.5s; }
.ripple-ring.r3 { animation-delay: 1s; }

@keyframes ripple-expand {
  0% {
    width: 50rpx;
    height: 50rpx;
    opacity: 0.8;
  }
  100% {
    width: 300rpx;
    height: 300rpx;
    opacity: 0;
  }
}

@keyframes pulse-glow {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.5;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.8;
  }
}

/* 3D Canvas */
.bag-3d-canvas {
  width: 600rpx;
  height: 600rpx;
  position: relative;
  filter: drop-shadow(0 15rpx 40rpx rgba(0, 0, 0, 0.3));
  transition: transform 0.15s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.bag-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  filter: drop-shadow(0 15rpx 40rpx rgba(0, 0, 0, 0.4));
  transition: transform 0.15s cubic-bezier(0.68, -0.55, 0.265, 1.55),
              opacity 0.15s ease-out,
              filter 0.2s ease-out;
  transform-style: preserve-3d;
  transform: translateZ(50rpx);
  border-radius: 50%;
  position: relative;
}

.bag-layer {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  pointer-events: none;
  will-change: opacity, transform, filter;
}

.bag-layer.active {
  opacity: 1;
  pointer-events: auto;
}

.bag-image::before {
  content: '';
  position: absolute;
  top: 15%;
  left: 20%;
  width: 35%;
  height: 35%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.7) 0%, rgba(255, 255, 255, 0.3) 50%, transparent 70%);
  border-radius: 50%;
  filter: blur(15rpx);
  pointer-events: none;
  z-index: 10;
  transform: translateZ(10rpx);
}

.bag-shadow {
  position: absolute;
  bottom: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 70%;
  height: 30rpx;
  background: radial-gradient(ellipse, rgba(0, 0, 0, 0.4) 0%, rgba(0, 0, 0, 0.2) 50%, transparent 70%);
  border-radius: 50%;
  filter: blur(20rpx);
  transition: all 0.3s ease;
  pointer-events: none;
  opacity: 0.6;
}

.bag-shadow.shadow-active {
  width: 60%;
  opacity: 0.8;
  filter: blur(25rpx);
}

.bag-3d-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
  transform-style: preserve-3d;
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.bag-image.shaking {
  animation: shake-3d 0.3s cubic-bezier(0.36, 0.07, 0.19, 0.97);
}

@keyframes shake-3d {
  0%, 100% {
    transform: translateZ(50rpx) rotateX(0deg) rotateY(0deg) scale(1);
  }
  10% {
    transform: translateZ(30rpx) rotateX(-12deg) rotateY(-18deg) scale(0.94);
  }
  20% {
    transform: translateZ(65rpx) rotateX(12deg) rotateY(18deg) scale(1.06);
  }
  30% {
    transform: translateZ(28rpx) rotateX(-10deg) rotateY(-15deg) scale(0.95);
  }
  40% {
    transform: translateZ(62rpx) rotateX(10deg) rotateY(15deg) scale(1.05);
  }
  50% {
    transform: translateZ(32rpx) rotateX(-8deg) rotateY(-12deg) scale(0.96);
  }
  60% {
    transform: translateZ(58rpx) rotateX(8deg) rotateY(12deg) scale(1.04);
  }
  70% {
    transform: translateZ(38rpx) rotateX(-5deg) rotateY(-8deg) scale(0.97);
  }
  80% {
    transform: translateZ(55rpx) rotateX(5deg) rotateY(8deg) scale(1.03);
  }
  90% {
    transform: translateZ(45rpx) rotateX(-2deg) rotateY(-4deg) scale(0.99);
  }
}

.bag-3d-wrapper.hit-squash {
  animation: squash-3d 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes squash-3d {
  0% {
    transform: scale3d(1, 1, 1) translateZ(0);
  }
  17% {
    transform: scale3d(1.2, 0.8, 1) translateZ(-20rpx);
  }
  50% {
    transform: scale3d(0.9, 1.1, 1) translateZ(15rpx);
  }
  75% {
    transform: scale3d(1.05, 0.97, 1) translateZ(-5rpx);
  }
  100% {
    transform: scale3d(1, 1, 1) translateZ(0);
  }
}

.bag-3d-wrapper.crit-hit {
  animation: crit-spin-3d 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes crit-spin-3d {
  0% {
    transform: scale3d(1, 1, 1) rotateY(0deg) rotateX(0deg);
  }
  15% {
    transform: scale3d(1.3, 0.7, 1) rotateY(60deg) rotateX(15deg);
  }
  35% {
    transform: scale3d(0.85, 1.15, 1) rotateY(180deg) rotateX(-10deg);
  }
  55% {
    transform: scale3d(1.1, 0.9, 1) rotateY(300deg) rotateX(8deg);
  }
  75% {
    transform: scale3d(0.95, 1.05, 1) rotateY(350deg) rotateX(-3deg);
  }
  100% {
    transform: scale3d(1, 1, 1) rotateY(360deg) rotateX(0deg);
  }
}

.bag-image.expression-hit {
  filter: hue-rotate(20deg) brightness(1.1);
}

.bag-image.expression-crit {
  filter: hue-rotate(40deg) brightness(1.3) saturate(1.5);
  animation: crit-glow 0.5s ease-in-out;
}

@keyframes crit-glow {
  0%, 100% {
    filter: hue-rotate(40deg) brightness(1.3) saturate(1.5) drop-shadow(0 0 0rpx rgba(255, 69, 0, 0));
  }
  50% {
    filter: hue-rotate(40deg) brightness(1.5) saturate(2) drop-shadow(0 0 40rpx rgba(255, 69, 0, 0.8));
  }
}

.bag-image.expression-dizzy {
  filter: blur(2rpx) grayscale(0.3);
  animation: dizzy-wobble-3d 1s ease-in-out;
}

@keyframes dizzy-wobble-3d {
  0%, 100% {
    transform: translateZ(50rpx) rotateZ(0deg);
  }
  25% {
    transform: translateZ(35rpx) rotateZ(-20deg) rotateY(20deg);
  }
  50% {
    transform: translateZ(30rpx) rotateZ(0deg) rotateY(-20deg);
  }
  75% {
    transform: translateZ(35rpx) rotateZ(20deg) rotateY(20deg);
  }
}

.bag-container:active .bag-3d-wrapper {
  transform: scale(0.96) translateZ(-15rpx);
}

.bag-container:active .bag-shadow {
  width: 65%;
  opacity: 0.9;
}

@media (hover: hover) {
  .bag-3d-wrapper:hover {
    transform: rotateY(8deg) rotateX(4deg) scale(1.02);
  }

  .bag-container:hover .bag-shadow {
    width: 75%;
    opacity: 0.7;
  }
}

@keyframes breathe-3d {
  0%, 100% {
    transform: scale3d(1, 1, 1) translateZ(0);
  }
  50% {
    transform: scale3d(1.02, 1.02, 1.02) translateZ(10rpx);
  }
}

/* 昏迷星星特效 */
.dizzy-stars {
  position: absolute;
  top: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 20rpx;
  pointer-events: none;
  animation: dizzy-float 1s ease-in-out infinite;
}

.dizzy-stars .star {
  font-size: 40rpx;
  animation: star-spin 2s linear infinite;
}

.dizzy-stars .star:nth-child(1) { animation-delay: 0s; }
.dizzy-stars .star:nth-child(2) { animation-delay: 0.3s; }
.dizzy-stars .star:nth-child(3) { animation-delay: 0.6s; }

@keyframes dizzy-float {
  0%, 100% { transform: translateX(-50%) translateY(0); }
  50% { transform: translateX(-50%) translateY(-20rpx); }
}

@keyframes star-spin {
  from { transform: rotate(0deg) scale(1); }
  50% { transform: rotate(180deg) scale(1.2); }
  to { transform: rotate(360deg) scale(1); }
}

/* 深色模式补充 */
.dark-mode .bag-shadow-simple {
  background: radial-gradient(ellipse, rgba(72, 219, 251, 0.1) 0%, rgba(0, 0, 0, 0.4) 50%, transparent 70%);
}

.dark-mode .bag-shadow {
  background: radial-gradient(ellipse, rgba(0, 0, 0, 0.6) 0%, rgba(0, 0, 0, 0.3) 50%, transparent 70%);
}
